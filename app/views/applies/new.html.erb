<%= form:for(@applies) do |f| %>
    <div>
        <h1>
            Crear nueva solicitud
        </h1>
        <div>
            <%= f.text_field :tittle, placeholder: "Titulo" %>
        </div>
        
        <div>
            <%= f.text_area :body. placeholder: "Solicitud" %>
        </div>
            <%= f.text_field :name. placeholder: "Nombre del Solicitante" %>

        <div>
            <%= f.text_field :edad. placeholder: "Edad del Solicitante" %>
        </div>
    </div>
<%end %>